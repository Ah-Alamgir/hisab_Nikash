<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main content view -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/startPrinting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="প্রিন্ট করুন"
            app:cornerRadius="40dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/printLayout_orderpage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/businessDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:background="@color/white"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/priceDetails"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:background="@color/white"
                android:text="0000"
                android:textAlignment="viewEnd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/customerDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@color/white"
                android:fontFamily="serif"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/priceDetails" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/businessDetails">

                <TextView
                    android:id="@+id/orderName"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="TextView"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/orderDor"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="TextView"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/orderAmount"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="TextView"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/orderDam"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="TextView"
                    android:textAlignment="center" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <!-- Navigation drawer view -->

    <LinearLayout
        android:id="@+id/navigation_drawer"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical">
        <!-- Your navigation drawer content here -->
        <ListView
            android:id="@+id/customerList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorSecondary"
            android:dividerHeight="2dp"
            android:headerDividersEnabled="true"
            android:paddingLeft="20dp" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>




















