<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Quantity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.addProduct">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSecondary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Add Product"
        app:titleTextColor="@color/white" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:visibility="visible"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="15dp"
                android:layout_margin="5dp"
                android:ems="10"
                android:background="@drawable/round_shape"
                android:hint="@string/product_name"
                android:inputType="text"/>

            <EditText
                android:id="@+id/sellingPrice"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="15dp"
                android:layout_margin="5dp"
                android:ems="10"
                android:background="@drawable/round_shape"
                android:hint="@string/sell_price"
                android:inputType="text"/>


            <EditText
                android:id="@+id/stock"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="15dp"
                android:layout_margin="5dp"
                android:ems="10"
                android:background="@drawable/round_shape"
                android:hint="@string/stock_hint"
                android:inputType="text"/>

            <EditText
                android:id="@+id/buyPrice"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="15dp"
                android:layout_margin="5dp"
                android:ems="10"
                android:background="@drawable/round_shape"
                android:hint="@string/buyPrice_hint"
                android:inputType="text"/>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="@string/vat_hint"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/vatAvai"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_shape"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:ems="10"
                    android:inputType="number"
                    android:text="@string/_0" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="ডিস্কাউন্ট"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/discount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/round_shape"
                    android:layout_gravity="right"
                    android:padding="15dp"
                    android:ems="10"
                    android:inputType="number"
                    android:text="@string/_0" />


            </LinearLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="এড করুন "
                android:textStyle="bold" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="আপডেট করুন "
        android:textStyle="bold"
        android:visibility="visible" />

</LinearLayout>